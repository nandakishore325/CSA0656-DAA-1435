#include<stdio.h>  
int main()  
{ 
int num, rem, sum = 0, i;
printf("Y.Nanda Kishore Reddy - 192211435\n");
printf("Enter a number:\n");  
scanf("%d", &num);
for(i = 1; i < num; i++)  
{  
rem = num % i;  
if (rem == 0)  
{  
sum = sum + i;  
}  
}  
if (sum == num)  
printf("a Perfect Number");
else                     
printf(" not a Perfect Number");  
return 0;
}  
